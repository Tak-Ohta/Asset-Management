<%= provide(:title, "@user.name") %>

<div class="col-md-8 col-md-offset-2">
  <h2>ユーザー情報</h2>

  <table class="table table-borderless user-table">
    <tr>
      <td>名前：</td>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td>メールアドレス：</td>
      <td><%= @user.email %></td>
    </tr>
    <tr>
      <td>生年月日：</td>
      <td><%= @user.birthday %></td>
    </tr>
    <tr>
      <td>性別：</td>
      <td><%= @user.sex %></td>
    </tr>
    <tr>
      <td>住まい：</td>
      <td><%= @user.prefecture %></td>
    </tr>
    <tr>
      <td>職業：</td>
      <td><%= @user.occupation %></td>
    </tr>
    <tr>
      <td>婚姻：</td>
      <td><%= @user.marriage %></td>
    </tr>
    <tr>
      <td>子供：</td>
      <td><%= @user.children %></td>
    </tr>
    <tr>
      <td>年収：</td>
      <td><%= @user.annual_income %></td>
    </tr>
  </table>

  <%= link_to "編集", edit_user_path(@user), class: "btn btn-primary btn-block" %>
</div>
